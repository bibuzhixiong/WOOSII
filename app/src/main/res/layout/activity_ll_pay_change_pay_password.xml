<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gap_bg">
    <include layout="@layout/activity_top_hold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="原密码" />

        <EditText
            android:id="@+id/et_source_passworde"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入原始密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:maxLines="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />

    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="新密码" />

        <EditText
            android:id="@+id/et_new_password"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入6位数字支付新密码"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="numberPassword" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="确定新密码" />

        <EditText
            android:id="@+id/et_ensure_new_password"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请再次输入6位数字支付新密码"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="numberPassword" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_commit"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_gray"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="@dimen/textBiggerSize" />


</LinearLayout>