<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="301dp"
    android:background="@color/white"
    >


        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/selector_back_press"/>

        <TextView
            android:id="@+id/tv_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/black"
            android:singleLine="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@null"
            android:gravity="center"
            android:layout_alignBottom="@+id/iv_search"
            android:layout_alignTop="@+id/iv_search"
            android:textSize="@dimen/textPrimarySize"/>


        <sochat.so.com.android.customview.CircleImageView
            android:id="@+id/iv_employee_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/iv_top_back"
            android:layout_centerHorizontal="true"
            android:src="@drawable/morentouxiang"
            />

        <TextView
            android:id="@+id/tv_employee_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="你的名字"
            android:padding="5dp"
            android:layout_below="@+id/iv_employee_photo"
            android:gravity="center"
            android:textColor="@color/mainTextColor"
            android:textSize="@dimen/textBiggerSize"
            />

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_below="@+id/tv_employee_name"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/tv_employee_tel"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:text="***********"
                android:drawablePadding="5dp"
                android:textColor="@color/mainHintColor"
                android:layout_toLeftOf="@+id/line_vertical"
                android:drawableLeft="@drawable/yuangongshouji"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_employee_address"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_employee_tel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="小沃中心"
                android:textColor="@color/mainHintColor"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/yuangongdiqu"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/tv_employee_yesterday_income"
                android:layout_alignLeft="@+id/tv_employee_tel"
                android:layout_below="@+id/tv_employee_address"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="昨日收益0元"
                android:drawablePadding="5dp"
                android:textColor="@color/mainHintColor"
                android:layout_toLeftOf="@+id/line_vertical"
                android:drawableLeft="@drawable/zuorishouyihui"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_employee_all_income"
                android:layout_alignLeft="@+id/tv_employee_address"
                android:layout_below="@+id/tv_employee_address"
                android:layout_toRightOf="@+id/tv_employee_yesterday_income"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="累计收益0元"
                android:textColor="@color/mainHintColor"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/leijishouyihui"
                android:gravity="center"
                />

        </RelativeLayout>

<View
    android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/gap_bg"
    android:layout_below="@+id/rl_1"
    />
    <TextView
        android:id="@+id/tv_text"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="所有老师"
        android:textColor="@color/mianColor"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="@dimen/textBiggerSize"
        />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:layout_below="@+id/tv_text"
        />


</RelativeLayout>