<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <sochat.so.com.android.customview.CircleImageView
        android:id="@+id/iv_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@drawable/liuyifei"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_alignBottom="@+id/iv_photo"
        android:layout_alignTop="@+id/iv_photo"
        android:layout_toRightOf="@+id/iv_photo"
        android:layout_toLeftOf="@+id/iv_shenglue"
        android:layout_marginBottom="-10dp"

        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李红伟老师"
            android:textSize="@dimen/textSmallerSize"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人物介绍：南开大学毕业，数学功底扎实，逻辑思维严密。热爱教育..."
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/textSmallSmallerSize"
            android:paddingTop="3dp"
            android:textColor="@color/school_infocolor"
            />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_course_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="168 视频"
                    android:layout_alignBottom="@+id/iv_course"
                    android:layout_toRightOf="@+id/iv_course"
                    android:textSize="@dimen/textSmallSmallerSize"
                    android:textColor="@color/school_contentcolor"
                    />

                <TextView
                    android:id="@+id/tv_attention_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="168 关注"
                    android:layout_alignBottom="@+id/iv_eye"
                    android:layout_toRightOf="@+id/iv_eye"
                    android:textSize="@dimen/textSmallSmallerSize"
                    android:textColor="@color/school_contentcolor"
                    android:paddingLeft="15dp"
                    />


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/iv_shenglue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shenglue"/>


</RelativeLayout>