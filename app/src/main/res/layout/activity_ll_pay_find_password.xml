<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gap_bg">
    <include layout="@layout/activity_top_hold"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ems="5"
            android:text="姓名" />

        <EditText
            android:id="@+id/et_name"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入您的姓名"
            android:maxLines="1"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="身份证号" />

        <EditText
            android:id="@+id/et_id"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入身份证号"
            android:maxLines="1"
            android:maxLength="26"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="新密码" />

        <EditText
            android:id="@+id/et_new_password"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入新密码"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="numberPassword" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="确定新密码" />

        <EditText
            android:id="@+id/et_ensure_new_password"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入新密码"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="numberPassword" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />

    <LinearLayout
        android:background="@color/white"
       android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入银行预留手机号"
            android:maxLines="1"
            android:maxLength="11"
            android:inputType="number"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />

    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="银行卡号" />

        <EditText
            android:id="@+id/et_bank_card"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入银行卡号"
            android:maxLines="1"
            android:maxLength="26"
            android:inputType="number" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@color/white"
        >

        <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入验证码"
            android:textSize="15sp"
            android:textColor="#B1AFAF"
            /> -->

        <EditText
            android:id="@+id/et_captcha"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:inputType="number"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:background="@color/mianColor"
            android:gravity="center"
            />


        <TextView
            android:clickable="true"
            android:id="@+id/tv_captcha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="@dimen/textSmallerSize"
            android:textColor="@drawable/selector__text_selected"
            />
    </LinearLayout>


    <TextView
        android:enabled="false"
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_gray"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="@dimen/textBiggerSize" />


</LinearLayout>