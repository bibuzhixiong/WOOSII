<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_top_hold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入支付密码，以验证身份"
        android:gravity="center"
        android:textColor="@color/mainTextColor"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/textBiggerSize"
        />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/edittext_no_corners"
        android:padding="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_password1"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/heidian16"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />

            <View
                android:layout_width="@dimen/topLineThin"
                android:layout_height="match_parent"
                android:background="#666"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_password2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/heidian16"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />

            <View
                android:layout_width="@dimen/topLineThin"
                android:layout_height="match_parent"
                android:background="#666"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_password3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/heidian16"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />
            <View
                android:layout_width="@dimen/topLineThin"
                android:layout_height="match_parent"
                android:background="#666"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_password4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/heidian16"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />

            <View
                android:layout_width="@dimen/topLineThin"
                android:layout_height="match_parent"
                android:background="#666"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_password5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/heidian16"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />

            <View
                android:layout_width="@dimen/topLineThin"
                android:layout_height="match_parent"
                android:background="#666"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_password6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/heidian16"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <EditText
            android:id="@+id/et_pay_password_invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="numberPassword"
            android:textColor="@color/transparent"
            android:maxLength="6"
            android:cursorVisible="false"
            />

    </RelativeLayout>



</LinearLayout>