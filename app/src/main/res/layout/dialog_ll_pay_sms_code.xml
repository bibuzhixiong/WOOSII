<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#00000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corners_dialog_ll_pay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/guanbi"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="请输入短信验证码"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textBigBiggerSize"
                />

            <!--<TextView-->
                <!--android:id="@+id/tv_"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="使用密码"-->
                <!--android:gravity="center"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:textColor="@color/mianColor"-->
                <!--/>-->
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/topLineThin"
            android:background="@color/mianColor"/>


        <TextView
            android:id="@+id/tv_goodes_name"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请在该银行卡绑定的手机查看"
            android:textSize="16dp"
            android:textColor="@color/mainTextColor"
            android:gravity="center"
            android:padding="15dp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_pay_money"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥20.00"
            android:textSize="44dp"
            android:textColor="@color/mainTextColor"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            />


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edittext_no_corners"
            android:padding="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_password1"
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heidian16"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />

                <View
                    android:layout_width="@dimen/topLineThin"
                    android:layout_height="match_parent"
                    android:background="#666"
                    />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_password2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heidian16"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />

                <View
                    android:layout_width="@dimen/topLineThin"
                    android:layout_height="match_parent"
                    android:background="#666"
                    />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_password3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heidian16"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />
                <View
                    android:layout_width="@dimen/topLineThin"
                    android:layout_height="match_parent"
                    android:background="#666"
                    />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_password4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heidian16"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />

                <View
                    android:layout_width="@dimen/topLineThin"
                    android:layout_height="match_parent"
                    android:background="#666"
                    />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_password5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heidian16"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />

                <View
                    android:layout_width="@dimen/topLineThin"
                    android:layout_height="match_parent"
                    android:background="#666"
                    />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_password6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heidian16"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <EditText
                android:id="@+id/et_pay_password_invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="numberPassword"
                android:textColor="@color/transparent"
                android:maxLength="6"
                />

        </RelativeLayout>
        
        <Button
            android:visibility="gone"
            android:id="@+id/btn_pay"
            android:layout_gravity="center_horizontal"
            android:text="确认支付"
            android:background="@drawable/selector_login_or_register_pressed"
            android:textColor="@color/white"
            android:textSize="@dimen/textBiggerSize"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
</LinearLayout>