<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/comment_commente_color"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight="1"
            />

        <ImageView
            android:visibility="invisible"
            android:padding="3dp"
            android:id="@+id/iv_share"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/shared_play_vediopress"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/like"
            android:layout_marginRight="5dp"
            android:padding="3dp"
            />
        <TextView
            android:id="@+id/tv_skip_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:drawableRight="@drawable/ordering_right"
            android:textColor="@color/mainTipColor"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/textSmallerSize"
            android:padding="5dp"
            android:drawablePadding="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/textSmallSmallerSize"
        android:textColor="@color/school_contentcolor"
        android:maxLines="3"
        android:minLines="3"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gap_bg"
        />

    <TextView
        android:id="@+id/tv_big_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="相关评论"
        android:textColor="@color/comment_commente_color"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThick"
        android:background="@color/line_gray"
        />




</LinearLayout>