<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp">
        <CheckBox
            android:checked="false"
            android:id="@+id/cb_is_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:button="@drawable/selector_checkbox"
            android:gravity="center"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_course_thumb"
            android:id="@+id/tv_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程名字"
            android:minLines="2"
            android:textColor="@color/comment_commente_color"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_course_thumb"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/liuyifei"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/cb_is_delete" />

    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_below="@id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"/>


</RelativeLayout>