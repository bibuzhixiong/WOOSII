<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_panorama"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/liuyifei"
        />
    <RelativeLayout
        android:layout_alignBottom="@+id/iv_panorama"
        android:layout_alignRight="@+id/iv_panorama"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_black"
        >
        <TextView
            android:id="@+id/tv_panorama_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘亦菲"
            android:textSize="@dimen/textPrimarySize"
            android:textColor="@color/white"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_panorama_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是美丽的沃噻"
            android:textSize="@dimen/textMoreSmallerSize"
            android:textColor="@color/white"
            android:layout_below="@+id/tv_panorama_name"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            />


    </RelativeLayout>



</RelativeLayout>