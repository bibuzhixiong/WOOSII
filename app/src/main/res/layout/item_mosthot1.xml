<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/app_icon"
            />

        <ImageView
            android:id="@+id/iv_jingping"
            android:visibility="gone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="-2dp"
            android:layout_marginLeft="-2dp"
            android:src="@drawable/jingpin"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="高等数学典型例题"
        android:gravity="left"
        android:paddingTop="5dp"
        android:textColor="@color/mainTextColor"
        android:textSize="@dimen/textSmallerSize"
        android:maxLines="1"
        android:minLines="1"
        android:ellipsize="end"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_time_long"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="¥20沃币"
            android:textSize="@dimen/textSmallSmallerSize"
            android:textColor="@color/red"
            android:layout_marginRight="10dp"

            />
        <TextView
            android:id="@+id/tv_free"
            android:visibility="invisible"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="免费"
            android:textSize="@dimen/textSmallSmallerSize"
            android:textColor="@color/mianColor"
            android:layout_marginRight="10dp"

            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讲师：PoPo酱"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_time_long"
            android:textColor="@color/mainHintColor"
            android:textSize="@dimen/textSmallSmallerSize"
            android:maxLines="1"
            />
    </RelativeLayout>



</LinearLayout>