<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="80dp"
        android:paddingBottom="80dp"
        >
        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="此视频为收费视频，确定"
            android:gravity="center"
            android:textColor="@color/mainHintColor"
            android:textSize="@dimen/textBiggerSize"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="要购买并观看吗？"
            android:gravity="center"
            android:textColor="@color/mainHintColor"
            android:textSize="@dimen/textBiggerSize"
            android:padding="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThick"
        android:background="@color/line_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确认购买"
            android:textSize="@dimen/textBiggerSize"
            android:textColor="@color/mianColor"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_my_item_click_bg"
            />

        <View
            android:layout_width="@dimen/topLineThick"
            android:layout_height="match_parent"
            android:background="@color/line_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/textBiggerSize"
            android:textColor="@color/mainTipColor"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_my_item_click_bg"
            />

    </LinearLayout>


</LinearLayout>