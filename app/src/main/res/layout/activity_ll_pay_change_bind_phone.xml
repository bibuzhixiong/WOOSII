<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_top_hold"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="原手机号" />

        <EditText
            android:id="@+id/et_old_phone"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入原手机号"
            android:maxLines="1"
            android:maxLength="11"
            android:inputType="number" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />



    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="支付密码" />

        <EditText
            android:id="@+id/et_pay_password"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入支付密码"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="numberPassword" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="验证码" />

        <EditText
            android:id="@+id/et_sms_code"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1" />

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:background="@color/mianColor"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/tv_captcha"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="@dimen/textSmallerSize"
            android:textColor="@drawable/selector__text_selected"
            android:paddingRight="10dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topLineThin"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        />

    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AuthenticationInformationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="新手机号" />

        <EditText
            android:id="@+id/et_new_phone"
            style="@style/AuthenticationInformationItemEditTexxt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入新手机号"
            android:maxLines="1"
            android:maxLength="11"
            android:inputType="numberPassword" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_commit"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_gray"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="@dimen/textBiggerSize" />

</LinearLayout>